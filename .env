# ========== ANALYTICS CONFIGURATION ==========
# Analytics Settings
ANALYTICS_ENABLED=true
MAX_EVENTS_STORED=10000
ANALYTICS_CLEANUP_INTERVAL=3600000
TRACK_IP_ADDRESSES=false

# Visitor Tracking
VISITOR_SESSION_TIMEOUT=1800000
MAX_VISITOR_LOGS=5000

# ========== LOGGING CONFIGURATION ==========
# Application Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Request Logging
REQUEST_LOGGING=true
LOG_FORMAT=combined

# ========== PERFORMANCE SETTINGS ==========
# Application Performance
WORKER_PROCESSES=auto
KEEP_ALIVE_TIMEOUT=5000
HEADER_TIMEOUT=60000

# Memory Management
MAX_MEMORY_USAGE=512
GARBAGE_COLLECTION_INTERVAL=300000

# ========== HEALTH CHECK CONFIGURATION ==========
# Monitoring
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
UPTIME_MONITORING=true

# Status Endpoints
STATUS_ENDPOINT=/health
METRICS_ENDPOINT=/metrics

# ========== DEVELOPMENT SETTINGS ==========
# Development Tools (set to false in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false
HOT_RELOAD=false

# Development CORS (more restrictive in production)
DEV_CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ========== FEATURE FLAGS ==========
# Global Storage Features
UNIVERSAL_IMAGE_ACCESS=true
SESSION_CACHING=true
REAL_TIME_ANALYTICS=true
AUTO_BACKUP=true
IMAGE_OPTIMIZATION=true

# Admin Features
ADMIN_DASHBOARD=true
ADVANCED_ANALYTICS=true
BULK_OPERATIONS=true
SYSTEM_MONITORING=true

# ========== ENVIRONMENT SPECIFIC ==========
