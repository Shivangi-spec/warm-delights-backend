COMPRESSION_ENABLED=true

# Encryption Settings
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=2h
REFRESH_TOKEN_EXPIRES_IN=7d

# ========== DATABASE CONFIGURATION ==========
# File-based Storage Configuration
STORAGE_TYPE=filesystem
STORAGE_PATH=./data
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
